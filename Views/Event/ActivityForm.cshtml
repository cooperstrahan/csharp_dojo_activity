<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<style>
    span {
        color: red;
    }
</style>
<body>
    @model CreateActivity
    <h1>Dojo Activity Center</h1>
    <a style="float: right;" href="/home">Home</a>
    <br>
    <a style="float: right;" href="/logout">Logout</a>
    <hr>
    
    <form action="/create" method="post">
        <div class="form-group">
            <span asp-validation-for="NewActivity"></span>
            <label asp-for="NewActivity">Title: </label>
            <input asp-for="NewActivity">
        </div>

        <div class="form-group">
            <span asp-validation-for="CreateDate"></span>
            <label asp-for="CreateDate">Date: </label>
            <input asp-for="CreateDate">
        </div>

        <div class="form-group">
            <span asp-validation-for="CreateDuration"></span>
            <label asp-for="CreateDuration">Duration: </label>
            <input asp-for="CreateDuration">
            <select asp-for="CreateDurationType">
                <option value="Minutes">Minutes</option>
                <option value="Hours">Hours</option>
                <option value="Days">Days</option>
            </select>
        </div>

        <div class="form-group">
            <span asp-validation-for="CreateDescription"></span>
            <label style="vertical-align: top;" asp-for="CreateDescription">Description: </label>
            <textarea rows="5" asp-for="CreateDescription"></textarea>
        </div>

        <button class="btn btn-primary">New Activity!</button>
    </form>
</body>
</html>